extends ./layout.jade

block content
    div.row
        div#instructions.pull-right
            a(href="/instructions") setup guide
        h1 Recent results
    table.table
        thead
            tr
                th repository
                th errors
                th warnings
                th notices
                th total
        tbody
            each report in repos
                tr
                    td 
                        a(href="/#{report.repoName}") #{report.repoName}
                    td#test #{report.error}
                    td#test #{report.warning}
                    td #{report.notice}
                    td #{report.total}